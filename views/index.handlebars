          });

            $( ".skilledList" ).each(function( index, element) {

              techList = [];

              $(this).children().each(function (element) {
                const technology = $(this).attr('data-tech');
                techList.push(technology);

              });

         console.log(techList);


    });
          $('#modal5').modal();
          $('#modal6').modal();

  });

